#!/bin/bash

SELF=$(basename $0)
BASE=$(cd $(dirname $0)/../..; pwd -P)

ARCH=auto
OS=auto

if [ -f "$BASE/tests/dalvik/$SELF.env" ]; then
  . $BASE/tests/dalvik/$SELF.env
fi

EXTRA_ARGS=
[ "x$DEBUG" == 'x1' ] && EXTRA_ARGS="$EXTRA_ARGS -debug"
[ "x$USE_DEBUG_LIBS" == 'x1' ] && EXTRA_ARGS="$EXTRA_ARGS -use-debug-libs"

TMP=$(pwd)/tmp
TARGET=$(pwd)

if [ ! -x $TARGET/test.out ]; then
  export ROBOVM_DEV_ROOT=$BASE
  echo "Build command line: " $ROBOVM_DEV_ROOT/bin/robovm \
    -arch $ARCH \
    -os $OS \
    -tmp $TMP \
    -d $TARGET \
    -o test.out \
    -verbose \
    $EXTRA_ARGS \
    $@

  $ROBOVM_DEV_ROOT/bin/robovm \
    -arch $ARCH \
    -os $OS \
    -tmp $TMP \
    -d $TARGET \
    -o test.out \
    -verbose \
    $EXTRA_ARGS \
    "$@"
  result=$?
  if [ $result -ne 0 ]; then
    exit $result
  fi
fi
